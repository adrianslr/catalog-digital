<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="374.0" prefWidth="305.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.controller.LoginController">
    <children>
        <AnchorPane prefHeight="374.0" prefWidth="305.0">
            <children>
                <VBox layoutX="50.0" layoutY="27.0" prefHeight="321.0" prefWidth="205.0">
                    <children>
                        <AnchorPane prefHeight="331.0" prefWidth="205.0">
                            <children>
                                <Label layoutX="29.0" layoutY="80.0" prefHeight="16.0" prefWidth="65.0" text="User"/>
                                <TextField fx:id="user" layoutX="17.0" layoutY="96.0" prefWidth="160.0"/>
                                <Label layoutX="29.0" layoutY="145.0" prefHeight="16.0" prefWidth="65.0"
                                       text="Password"/>
                                <PasswordField fx:id="password" layoutX="17.0" layoutY="161.0" prefWidth="160.0"/>
                                <Button fx:id="login" layoutX="17.0" layoutY="245.0" mnemonicParsing="false"
                                        onAction="#login" prefHeight="26.0" prefWidth="160.0" text="Login"/>
                                <Label fx:id="error" layoutX="17.0" layoutY="291.0" prefHeight="16.0"
                                       prefWidth="160.0"/>
                                <ToggleButton onAction="#admin" layoutX="103.0" layoutY="202.0" mnemonicParsing="false" prefHeight="25.0"
                                              prefWidth="76.0" text="Admin">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="Admin"/>
                                    </toggleGroup>
                                </ToggleButton>
                                <ToggleButton onAction="#profesor" layoutX="17.0" layoutY="202.0" mnemonicParsing="false" prefHeight="25.0"
                                              prefWidth="76.0" selected="true" text="Profesor" toggleGroup="$Admin"/>
                            </children>
                        </AnchorPane>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
